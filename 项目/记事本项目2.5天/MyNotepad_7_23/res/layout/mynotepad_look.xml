<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dbefd4"
    android:orientation="vertical" >

    <!-- 标题栏部分 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="#a6c43d" >

        <Button
            android:id="@+id/btn_return"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/fanhui" />

        <!-- android:layout_centerInParent="true"设置当前控件位于该父类布局的中间位置 -->

        <TextView
            android:id="@+id/look_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="上海一日游"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
    <!-- 分割线 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#ce2cd8" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:orientation="horizontal" >
        <ImageView 
            android:id="@+id/look_image"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/d_sunny_cloudy"/>
        
        <TextView 
            android:id="@+id/look_weather"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#000"
            android:textSize="25sp"
            android:gravity="center"
            android:text="天气：雷阵雨"/>
    </LinearLayout>
        <View
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#00ff00" />
    <TextView 
        android:id="@+id/look_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="TTTTTTTTT"/>

</LinearLayout>